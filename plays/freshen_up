#!/usr/bin/env ansible-playbook
---
############################################
# This playbook will run locally to get fresh copies of:
# * ~/.ssh/id_rsa.pub
# * ~/.aliases
# * ~/.vimrc
# * ~/.zshrc
############################################


# --------------------------------
# Do the work
- name: Freshen Up
  hosts: localhost
  gather_facts: False
  vars:
    SSH_PUBLIC_ID: ~/.ssh/id_rsa.pub
    ALIASES: ~/.aliases
    ZSHRC: ~/.zshrc
    VIMRC: ~/.vimrc
  tasks:

# --------------------------------
# Copy SSH keys to remote ~/.ssh/authorized_keys
  - name: Get fresh copy of ~/.ssh/id_rsa
    local_action: command cp {{ SSH_PUBLIC_ID }} {{ playbook_dir }}/../files/
    run_once: true
    ignore_errors: yes

  - name: Get fresh copy of aliases
    local_action: command cp {{ ALIASES }} {{ playbook_dir }}/../files/aliases
    run_once: true
    ignore_errors: yes

  - name: Get fresh copy of zshrc
    local_action: command cp {{ ZSHRC }} {{ playbook_dir }}/../files/zshrc
    run_once: true
    ignore_errors: yes

  - name: Get fresh copy of vimrc
    local_action: command cp {{ VIMRC }} {{ playbook_dir }}/../files/vimrc
    run_once: true
    ignore_errors: yes

  - name: Get fresh copy of vim colors
    local_action: command cp -r ~/.vim/colors/ {{ playbook_dir }}/../files/
    run_once: true
    ignore_errors: yes
